<Application x:Class="CarRepairShop.Presentation.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:CarRepairShop.Presentation.Wpf.Controls"
             xmlns:addOrderViewModel="clr-namespace:CarRepairShop.Presentation.Wpf.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type addOrderViewModel:AddOrderViewModel}">
                        <controls:AddOrderControl/>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>